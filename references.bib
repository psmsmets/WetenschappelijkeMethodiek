author = {Manney, Gloria L and Sabutis, Joseph L and Allen, Douglas R and Lahoz, William A and Scaife, Adam A and Randall, Cora E and Pawson, Steven and Naujokat, Barbara and Swinbank, Richard},
doi = {10.1175/JAS-3313.1},
file = {:Users/psmets/Research/Mendeley Desktop/2005/Manney et al/Manney et al. - 2005 - J. Atmos. Sci. - Simulations of Dynamics and Transport during the September 2002 Antarctic Major Warming.pdf:pdf},
issn = {0022-4928},
