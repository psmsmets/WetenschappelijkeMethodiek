file = {:Users/psmets/Research/Mendeley Desktop/2015/Snieder, Sens-Sch{\"{o}}nfelder/Snieder, Sens-Sch{\"{o}}nfelder - 2015 - Journal of Geophysical Research Solid Earth - Seismic interferometry and stationary phase at caustic.pdf:pdf},
issn = {21699313},
