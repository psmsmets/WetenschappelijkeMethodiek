journal = {Radio Science},
keywords = {atmosphere,gps,radio{\_}occultation},
month = {dec},
number = {6},
title = {{GPS radio occultation for climate monitoring and change detection}},
url = {http://dx.doi.org/10.1029/2010rs004614 http://doi.wiley.com/10.1029/2010RS004614},
