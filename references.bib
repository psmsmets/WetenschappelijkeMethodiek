doi = {10.1016/j.crte.2011.03.001},
file = {:Users/psmets/Research/Mendeley Desktop/2011/Froment, Campillo, Roux/Froment, Campillo, Roux - 2011 - Comptes Rendus Geoscience - Reconstructing the Green's function through iteration of correlations.pdf:pdf},
