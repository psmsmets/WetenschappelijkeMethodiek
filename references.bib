doi = {10.1093/gji/ggy156},
file = {:Users/psmets/Research/Mendeley Desktop/2018/Lindner et al/Lindner et al. - 2018 - Geophysical Journal International - Towards monitoring the englacial fracture state using virtual-reflector seis.pdf:pdf},
issn = {1365246X},
journal = {Geophysical Journal International},
keywords = {Coda waves,Fracture and flow,Glaciology,Seismic interferometry,Wave scattering and diffraction},
pages = {825--844},
publisher = {Oxford University Press},
title = {{Towards monitoring the englacial fracture state using virtual-reflector seismology}},
volume = {214},
year = {2018}
}
